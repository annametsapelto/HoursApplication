<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterInformationActivity"
    android:orientation="vertical"
    android:background="@color/lightBlue">
    <Button
        android:id="@+id/date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a Date"
        android:onClick="pickADate"
        android:layout_margin="5dp"
        android:textColor="@color/lightYellow"
        android:background="@drawable/button_border"
        />
    <TextView
        android:id="@+id/picked_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chosen date: "
        android:textSize="20dp"
        android:layout_margin="5dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter hours: "
        android:textSize="20dp"
        android:layout_margin="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hoursInput"
        android:inputType="number"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter minutes: "
        android:textSize="20dp"
        android:layout_margin="5dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/minutesInput"
        android:inputType="number"
        />
    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="submit"
        android:layout_margin="5dp"
        android:textColor="@color/lightYellow"
        android:background="@drawable/button_border"
        />
    <Button
        android:id="@+id/cancelButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:onClick="cancel"
        android:layout_margin="5dp"
        android:textColor="@color/lightYellow"
        android:background="@drawable/button_border"
        />


</androidx.appcompat.widget.LinearLayoutCompat>